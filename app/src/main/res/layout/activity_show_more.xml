<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show More Details (Administrator)"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Details:"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewRequestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requester's Name: John Doe"
        android:layout_below="@+id/textViewDetails"
        android:layout_marginTop="8dp" />
    
    <TextView
        android:id="@+id/textViewRequestType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Type: Registration"
        android:layout_below="@+id/textViewRequestName"
        android:layout_marginTop="8dp" />


    </RelativeLayout>